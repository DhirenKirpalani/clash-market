{
  "include": [
    "shared/**/*",
    "server/**/*",
    "pages/**/*",
    "components/**/*",
    "hooks/**/*",
    "lib/**/*",
    "types/**/*",
    "app/**/*"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "."
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@assets/*": [
        "attached_assets/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/types/*": [
        "types/*"
      ]
    },
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ]
}
